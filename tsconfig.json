{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "outDir": "out",
      "lib": ["es6", "dom", "esnext.asynciterable"],
      "sourceMap": true,
      "rootDir": "src",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true /* enable all strict type-checking options */,
      "jsx": "react",
      "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules", ".test-resources"]
  }
